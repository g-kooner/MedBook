<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add_button"
        android:onClick="addMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addButton" />

    <Button
        android:id="@+id/del_button"
        android:onClick="delMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delButton" />

    <Button
        android:id="@+id/edit_med_button"
        android:onClick="editMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/editMedButton" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/InstructionText"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/med_list"
        android:layout_width="match_parent"
        android:layout_height="447dp" />

    <TextView
        android:id="@+id/total_doses"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:textSize="34sp"
        android:translationY="-8dp" />

</LinearLayout>